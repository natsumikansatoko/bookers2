<div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div>

        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book_new do |f| %>
          <label for="book_title">Title</label><br>
            <%= f.text_field :title, class: "form-group" %>
          <label for="book_opinion">Opinion</label><br>
            <%= f.text_area :body, class: "form-group" %>
            <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <thead>
            <tr>
              <td>
                <%= link_to user_path(@book.user_id) do %>
                <% if @user.profile_image.attached? %>
                  <%= image_tag @user.profile_image, size: "20x20" %>
                <% else %>
                  <%= image_tag 'no_image', size: "20x20" %>
                <% end %>
                  <nav>
                    <%= link_to @book.user.name, user_path(@book.user_id) %>
                  </nav>
                <% end %>
              </td>
              <td>
                <%= link_to @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if @book.user_id == current_user.id %>
                <td>
                  <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger destroy(@book.id", method: :delete, data: {confirm: "本当に消しますか？"} %>
                </td>
              <% end %>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>