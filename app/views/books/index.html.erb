<p id="notice"></p>
  <div class="container px-5 px-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          設定
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body %>
          </div>

          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <%= @books.each do |book| %>
          <tr><%= book.title %></tr>
        <% end %>
      </tbody>
    </table>
  </div>