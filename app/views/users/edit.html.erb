<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div id="error_explanation">
      <% if @user.errors.any? %>
        <h3>
       <%= @user.errors.count %>errors prohibited this obj from being saved:
        </h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      </div>
      <%= form_with model: @user, method: :patch do |f| %>
      <label for="user_name">Name</label><br>
      <%= f.text_field :name %><br>
      <label for="user_image">Image</label><br>
      <%= f.file_field :profile_image, accept: "image/*" %><br>
      <label for="user_introduction">Introduction</label><br>
      <%= f.text_area :introduction %><br>

      <%= f.submit 'Update User', class: "btn btn-secondary" %>

      <% end %>
    </div>
  </div>
</div>